
<h2>@Model["student"].GetName()</h2>
<h3>@Model["student"].GetDate()</h3>
<hr />
@if (@Model["studentCourses"].Count != 0)
{
  <h4>This student is enrolled in these classes:</h4>
  <ul>
    @foreach (var course in @Model["studentCourses"])
    {
      <li>@course.GetName()</li>
      <li>@course.GetNumber()</li>
    }
  </ul>
}
